@page "/AuditsFailed"


@inherits ServicePageBase<AUDIT_FAILED,IAuditFailedService>


<AuthenticationView>
    <Authenticated>

        <GenGrid @ref="Grid"
                 DataSource="@DataSource"
                 TModel="AUDIT_FAILED"
                 EditMode="EditMode.SmartForm"
                 MaxWidth="MaxWidth.Large"
                 Title="Audit Queries"
                 FixedFooter="true"
                 Search="FindByParametersAsync"
                 Height="500"
                 Class="m-2">
            <GenSearchFields>
                <GenComboBox BindingField="@nameof(AUDIT_FAILED.AB_USER_ID)"
                             DataSource="UsersList.Value"
                             DisplayField="@nameof(USERS.U_FULLNAME)"
                             ValueField="@nameof(USERS.U_ROWID)"
                             xs="12" sm="12" md="6" lg="3" xl="3" xxl="3"
                             Label="User"/>
            </GenSearchFields>
            <GenColumns>

                <GenTextField BindingField="@nameof(AUDIT_FAILED.AB_DATE)"
                              Label="Date" />

                <GenComboBox BindingField="@nameof(AUDIT_FAILED.AB_USER_ID)"
                             DataSource="UsersList.Value"
                             DisplayField="@nameof(USERS.U_NAME)"
                             ValueField="@nameof(USERS.U_ROWID)"
                             Label="User" />

                <GenComboBox BindingField="@nameof(AUDIT_FAILED.AB_TYPE)"
                             DataSource="OperationsList.Value"
                             DisplayField="@nameof(Operations.Description)"
                             ValueField="@nameof(Operations.Id)"
                             Label="Type" />

                <GenTextField BindingField="@nameof(AUDIT_FAILED.AB_END_POINT)"
                              Label="Date" />

                <GenTextField BindingField="@nameof(AUDIT_FAILED.AF_ERROR)"
                              Label="Error" />

                <GenTextField BindingField="@nameof(AUDIT_FAILED.AF_PARAMETERS)"
                              Label="Property" />

            </GenColumns>        
        </GenGrid>
        
    </Authenticated>
</AuthenticationView>


 