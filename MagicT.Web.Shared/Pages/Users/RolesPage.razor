@page "/Roles"


@inherits ServiceSecurePageBase<ROLES, IRolesService>


<AuthenticationView>
    <Authenticated>

 
        <GenGrid @ref="Grid"
                 DataSource="@DataSource" TModel="ROLES"
                 EditMode="EditMode.SmartForm"
                 MaxWidth="MaxWidth.Large"
                 Create="CreateEncryptedAsync"
                 Update="UpdateEncryptedAsync"
                 Delete="DeleteEncryptedAsync"
                 Cancel="Cancel"
                 Load="LoadAsync"
                 Title="Roles"
                 FixedFooter="true"
                 Height="100vh">
            <GenColumns>

                <GenTextField @ref="AB_NAME"
                              BindingField="@nameof(ROLES.AB_NAME)"
                              xs="12" sm="12" md="12" lg="9" xl="9" xxl="9"
                              Label="Role Name" />

                <GenSpacer xs="12" sm="12" md="12" lg="1" xl="1" xxl="1" />

                <GenTextField BindingField="@nameof(ROLES.AB_DESCRIPTION)"
                              xs="12" sm="12" md="12" lg="2" xl="2" xxl="2"
                              EditorEnabled="false" Label="Description" />

                <GenSpacer xs="12" sm="12" md="12" lg="1" xl="1" xxl="1" />

                <GenTextField BindingField="@nameof(ROLES.AB_AUTH_TYPE)"
                              xs="12" sm="12" md="12" lg="2" xl="2" xxl="2"
                              EditorEnabled="false" Label="Role Type" />

               
 
                @* <GenFileUpload BindingField="test" Color="Color.Secondary" Label="Upload" *@
                @* xs="12" sm="12" md="12" lg="12" xl="12" xxl="12" Variant="Variant.Filled"/> *@

            </GenColumns>
            <GenDetailGrid>
                <MudTabs Class="mt-5" Style="width:100%!important" Color="Color.Primary">
                    <MudTabPanel Text="Role Details">
                        <RolesPermissions ParentModel="context" />
                    </MudTabPanel>
                </MudTabs>
            </GenDetailGrid>
        </GenGrid>
        
    </Authenticated>
</AuthenticationView>


 