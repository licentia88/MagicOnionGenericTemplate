
@inherits ServicePageBase<ROLES, PERMISSIONS, IPermissionsService>

<AuthenticationView>
    <Authenticated>

        <GenGrid @ref="Grid"
                 DataSource="@DataSource" TModel="PERMISSIONS"
                 EditMode="EditMode.Inline"
                 Create="CreateAsync"
                 Update="UpdateAsync"
                 Delete="DeleteAsync"
                 Cancel="Cancel"
                 FixedFooter="true">
            <GenColumns>
                <GenTextField @ref="PER_PERMISSION_NAME"
                              BindingField="@nameof(PERMISSIONS.PER_PERMISSION_NAME)"
                              Label="Permission Name" />
            </GenColumns>
        </GenGrid>

      
    </Authenticated>
</AuthenticationView>


