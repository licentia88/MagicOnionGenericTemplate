
@inherits ServiceSecurePageBase<ROLES, PERMISSIONS, IPermissionsService>

<AuthenticationView>
    <Authenticated>

        <GenGrid @ref="Grid"
                 DataSource="@DataSource" TModel="PERMISSIONS"
                 EditMode="EditMode.Inline"
                 Create="CreateEncryptedAsync"
                 Update="UpdateEncryptedAsync"
                 Delete="DeleteEncryptedAsync"
                 Cancel="Cancel"
                 FixedFooter="true">
            <GenColumns>
                <GenTextField @ref="PER_PERMISSION_NAME"
                              BindingField="@nameof(PERMISSIONS.PER_PERMISSION_NAME)"
                              Label="Permission Name" />

                <GenSpacer xs="12" sm="12" md="12" lg="1" xl="1" xxl="1" />

                <GenTextField BindingField="@nameof(ROLES.AB_DESCRIPTION)"
                              xs="12" sm="12" md="12" lg="2" xl="2" xxl="2"
                              EditorEnabled="false" Label="Description" />
            </GenColumns>
        </GenGrid>

      
    </Authenticated>
</AuthenticationView>


