@page "/TestModelServicePage"

@inherits ServicePageBase<TestModel, ITestService>

 
<MudButton OnClick="FailAdd">FailAdd</MudButton>

<MudButton OnClick="AddMillionData">Add Million Data</MudButton>

<GenGrid @ref="Grid"
         DataSource="DataSource"
         TModel="TestModel"
         EditMode="EditMode.Form"
         Title="TestModel Page"
         MultiSelection="false"
         Create="CreateAsync"
         Update="UpdateAsync"
         Delete="DeleteAsync"
         Where="x=>!string.IsNullOrEmpty(x.CheckData)"
         Search="ReadAsync">
    <GenSearchFields>
        <GenTextField Label="Description" BindingField="@(nameof(TestModel.Description))"
                      xs="12" sm="12" md="3" lg="3" xl="3" xxl="3"/>
        <GenTextField Label="DescriptionDetails" BindingField="@(nameof(TestModel.DescriptionDetails))"
                      xs="12" sm="12" md="3" lg="3" xl="3" xxl="3"/>
        <GenDatePicker BindingField="@(nameof(TestModel.StartDate))" tabindex="-1"
                       xs="12" sm="12" md="3" lg="3" xl="3" xxl="3"/>
        <GenDatePicker BindingField="@(nameof(TestModel.EndDate))"
                       xs="12" sm="12" md="3" lg="3" xl="3" xxl="3" tabindex="-1"/>
    </GenSearchFields>
    <GenColumns>
        <GenSpacer xs="12" sm="12" md="7" lg="7" xl="7" xxl="7"/>

        <GenDatePicker BindingField="@(nameof(TestModel.StartDate))" tabindex="-1"/>
        <GenSpacer xs="12" sm="12" md="1" lg="1" xl="1" xxl="1"/>
        <GenDatePicker BindingField="@(nameof(TestModel.EndDate))"/>

        <GenTextField Label="Description" BindingField="@(nameof(TestModel.Description))"
                      xs="12" sm="12" md="7" lg="2" xl="2" xxl="2"/>
        <GenSpacer xs="12" sm="12" md="1" lg="1" xl="1" xxl="1"/>

        <GenTextField Label="DescriptionDetails" BindingField="@(nameof(TestModel.DescriptionDetails))"
                      xs="12" sm="12" md="2" lg="2" xl="2" xxl="2"/>

        <GenFileUpload T="IBrowserFile" BindingField="@nameof(TestModel.MediaDescription)" FilesChanged="UploadFiles2" Label="Test" Color="Color.Dark" Variant="Variant.Filled"/>


        <GenSpacer xs="12" sm="12" md="12" lg="12" xl="12" xxl="12"/>

        <GenSpacer xs="12" sm="12" md="12" lg="12" xl="12" xxl="12"/>

        <GenTextField Label="CheckData" BindingField="@(nameof(TestModel.CheckData))"/>

        <GenCheckBox  TrueText="True" FalseText="False" Label="boolean" BindingField="@(nameof(TestModel.IsTrue))"/>

        @* <GenImage Src="https://static.remove.bg/sample-gallery/graphics/bird-thumbnail.jpg" Alt="Mony the dog" Elevation="25" Class="rounded-lg" Label="TestMeaah" /> *@


    </GenColumns>
</GenGrid>