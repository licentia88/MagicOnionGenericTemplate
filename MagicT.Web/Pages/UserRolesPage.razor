
@inherits ServicePageBase<USERS, USER_ROLES, IUserRolesService>



<AuthenticationView>
    <Authenticated>
        <GenGrid DataSource="@DataSource" TModel="USER_ROLES"
                 EditMode="EditMode.Inline"
                 Create="CreateAsync"
                 Update="UpdateAsync"
                 Delete="DeleteAsync"
                 FixedFooter="true">
            <GenColumns>
                @{
                    <GenComboBox BindingField="@nameof(USER_ROLES.UR_ROLE_REFNO)"
                                 DataSource="AuthList.Value.Where(x=> x.AB_AUTH_TYPE == AUTH_TYPE)"
                                 DisplayField="@_displayField"
                                 ValueField="@nameof(PERMISSIONS.AB_ROWID)"
                                 Placeholder="Select"
                                 Label="@_label" />
                }


            </GenColumns>
        </GenGrid>

      
    </Authenticated>
</AuthenticationView>


