
<CascadingValue Name="LoginData" Value="@LoginManager.LoginData">
    <CascadingValue Name="@(nameof(LoginManager.ClientShared))" Value="@LoginManager.ClientShared">
        <CascadingValue Name="@(nameof(SignOutFunc))" Value="@SignOutFunc">
            <CascadingValue Name="@(nameof(IsDarkMode))" Value="@IsDarkMode">
                <CascadingValue Name="@(nameof(ThemeToggled))" Value="@ThemeToggled">
                    <Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="@(new[] { typeof(MagicT.Web.Shared.Pages.Audits.AuditsQuery).Assembly })">
                        <Found Context="routeData">

                            @{
                                if (IsLoaded)
                                {
                                    <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                                    <FocusOnNavigate RouteData="@routeData" Selector="h1" />
                                }
                            }

                        </Found>
                        <NotFound>
                            <LayoutView Layout="@typeof(MainLayout)">
                                <NotFound />
                            </LayoutView>
                        </NotFound>
                    </Router>
                </CascadingValue>
            </CascadingValue>
        </CascadingValue>
    </CascadingValue>
</CascadingValue>

